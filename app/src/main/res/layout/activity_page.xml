<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <ImageView
        android:id="@+id/slideImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp">

        <TextView
            android:id="@+id/pageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="1"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/grid_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="/"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/endPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <com.learn.howtodraw.draw.FontA.TextAwesome
        android:id="@+id/previousImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:text="@string/fa_angle_left"
        android:textColor="@color/colorAccent"
        android:textSize="50dp"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/help_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="55dp"
        android:layout_marginLeft="55dp"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/helpcontainer"
        android:paddingBottom="10dp"
        android:text="Tool tip Tool tipT tTool tip Tool tip tTool tip Tool tip "
        android:textColor="#ffffff" />




    <TextView
        android:id="@+id/share_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="share your drawing"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/shareLayout">



        <com.learn.howtodraw.draw.FontA.TextAwesome
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"

            android:text="@string/fa_twitter"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <com.learn.howtodraw.draw.FontA.TextAwesome
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/fa_camera_retro"
            android:textColor="@color/colorAccent"
            android:textSize="40dp" />

        <com.learn.howtodraw.draw.FontA.TextAwesome
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"

            android:paddingTop="-50dp"
            android:text="@string/fa_facebook"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>

    <com.learn.howtodraw.draw.FontA.TextAwesome
        android:id="@+id/nextImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:text="@string/fa_angle_right"
        android:textColor="@color/colorAccent"
        android:padding="10dp"
        android:textSize="50dp" />


</RelativeLayout>
