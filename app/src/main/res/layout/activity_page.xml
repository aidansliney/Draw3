<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <ImageView
        android:id="@+id/slideImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/mi3_4figure21" />


    <com.learn.howtodraw.draw.FontA.TextAwesome
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_question_circle"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <com.learn.howtodraw.draw.FontA.TextAwesome
        android:id="@+id/nextImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_angle_right"
        android:textSize="50dp"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <com.learn.howtodraw.draw.FontA.TextAwesome
        android:id="@+id/previousImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_angle_left"
        android:textSize="50dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
